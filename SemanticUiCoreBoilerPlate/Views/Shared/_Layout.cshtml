<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/fomantic-ui/semantic.min.css" rel="stylesheet" />
    <link href="~/lib/vegas/vegas.min.css" rel="stylesheet" />
    <link href="~/css/main.min.css" rel="stylesheet" />
</head>
<body>
    @await Html.PartialAsync("FixedNavbar")
    @await Html.PartialAsync("Sidebar")

    <div class="pusher">
        <div class="ui container fluid">
            <div class="following-menu-fix">
                @await Html.PartialAsync("Navbar")
            </div>
            @*@await Html.PartialAsync("Slider")*@
            @RenderBody()
            @await Html.PartialAsync("Footer")
        </div>
    </div>
    <script src="~/js/main.bundle.js"></script>

</body>
</html>
